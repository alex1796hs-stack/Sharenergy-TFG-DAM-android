<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_diagonal">

    <!-- El logo -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/logo_img"
        android:contentDescription="Logo Sharenergy"
        android:scaleType="fitCenter"/>


    <!-- Mensaje principal de la pagina -->
    <TextView
        android:text="¿Se te acabó la batería?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:layout_marginBottom="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Escanea el código QR para comenzar el alquiler"
        android:textSize="16sp"
        android:textColor="#555555"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- simulacion de QR -->
    <ImageView
        android:id="@+id/imgQR"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/qr_simulado"
        android:contentDescription="Código QR Sharenergy"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:scaleType="fitCenter"/>
    <TextView
        android:text="(Código QR simulado)"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Escanea · Carga · Devuelve"
        android:textSize="14sp"
        android:textColor="#2E7D32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
